datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  createdAt         DateTime     @default(now())
  id                String       @id @default(cuid())
  ingredients       Ingredient[]
  recipeIngredients String?
  recipeTitle       String?
  recipeUrl         String?
  title             String?
  updatedAt         DateTime     @updatedAt
  url               String?
  userRelation      String?
}

model Ingredient {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  quantity  String?
  recipe    Recipe?  @relation(fields: [recipeId], references: [id])
  recipeId  String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt    DateTime @default(now())
  email        String?  @unique
  firstName    String?
  id           String   @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime @updatedAt
  username     String   @unique
  userName     String?
  userPassword String?
}
